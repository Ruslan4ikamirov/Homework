#include <stdio.h>
#include <math.h>
int main(){
int base;
int power;
//Кейс №2
 printf("Кейс №2 \n");
 printf("Введите основание,возводимое в степень: ");
 scanf("%d", &base);
 printf("Введите степень: ");
 scanf("%d", &power);
 int number;
 number = pow(base, power);
 printf("Результат возведения числа в степень равен: %d", number);
 printf("\n");
//Кейс №3
 printf("Кейс №3 \n");
 int m;
 printf("Введите наше число: ");
 scanf("%d", &m);
  if(m == 2 ){
    printf("1 ");
  }
  else if(m % 1 == 0 && m % m == 0 && m % 2 != 0){
    printf("1 ");
  }
  else {
    printf("0");
  }
 printf("\n");
//Кейс №4
 printf("Кейс №4 \n");
 int n;
 printf("Введите n,до которого необходимо произвести вывод чисел: ");
 scanf("%d", &n);
  for (int i = 1; i <= n; i++){
    printf("%d \n", i);
  }
 return 0;
}
